{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "module": "esnext",
    "lib": [
      "ES2019"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
